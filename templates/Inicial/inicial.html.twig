{% extends 'base.html.twig' %}


{% block main %}
    <!-- Display Flash Messages -->
    <div class="absolute top-0 end-0 mt-8 z-50">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <!-- Toast -->
                <div id="dismiss-toast" class="hs-removing:translate-x-5 hs-removing:opacity-0 transition duration-300 max-w-xs {% if type == 'success' %} bg-green-500 {% elseif type == 'error' %} bg-red-500 {% endif %} rounded-xl shadow-lg" role="alert" tabindex="-1" aria-labelledby="hs-toast-dismiss-button-label hs-toast-placement-top-right-label">
                    <div class="flex p-4">
                        <p id="hs-toast-dismiss-button-label hs-toast-placement-top-right-label" class="text-sm text-white">
                            {{ message }}
                        </p>

                        <div class="ms-auto">
                            <button type="button" class="inline-flex shrink-0 justify-center items-center size-5 rounded-lg text-white opacity-50 hover:opacity-100 focus:outline-none focus:opacity-100" aria-label="Close" data-hs-remove-element="#dismiss-toast">
                                <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M18 6 6 18"></path>
                                    <path d="m6 6 12 12"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
                <!-- End Toast -->
            {% endfor %}
        {% endfor %}
    </div>
    <section class="text-center my-16">
        <h1 class="text-5xl font-bold mb-6 text-gray-800">Bem-vindo ao Stylos Black</h1>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">Oferecemos os melhores serviços para cuidar do seu visual, com profissionais qualificados e atendimento personalizado.</p>
    </section>
    <section class="text-center mb-16 w-full">
        <h2 class="text-4xl font-bold mb-8 text-gray-800">Faça o agendamento</h2>
        <p class="text-gray-600 text-lg mb-12">Escolha a categoria que deseja agendar.</p>
        <div class="flex flex-col md:flex-row justify-center space-y-8 md:space-y-0 md:space-x-10 w-full">
            <!-- Barbeiro -->
            <div class="w-full md:w-1/2 lg:w-1/3 p-6 bg-white shadow-lg rounded-lg transform hover:scale-105 transition-transform duration-300">
                <img src="" alt="Barbeiro" class="h-48 w-full object-cover mb-6 rounded-lg">
                <button class="bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700">Agendar com barbeiro</button>
            </div>
            <!-- Trancista -->
            <div class="w-full md:w-1/2 lg:w-1/3 p-6 bg-white shadow-lg rounded-lg transform hover:scale-105 transition-transform duration-300">
                <img src="" alt="Trancista" class="h-48 w-full object-cover mb-6 rounded-lg">
                <button class="bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700">Agendar com Trancista</button>
            </div>
        </div>
    </section>

{% endblock %}