{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block main %}
    <h1 class="mt-8 text-center font-bold text-xl">Lista de serviços</h1>
<div class="flex flex-col items-center justify-center w-full h-[60vh]">

    <div class="flex flex-col">
        <div class="overflow-x-auto w-full"> <!-- Faz o contêiner ocupar 100% da largura -->
            <div class="p-1.5 min-w-[50%] inline-block align-middle"> <!-- Define uma largura mínima de 50% -->
                <div class="border rounded-lg divide-y divide-gray-200">
                    <div class="overflow-hidden max-h-[60vh] overflow-y-auto"> <!-- Rolagem vertical limitada -->
                        <table class="min-w-full divide-y divide-gray-200"> <!-- Garante que a tabela ocupe 100% da largura disponível -->
                            <thead class="bg-primary">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-100 uppercase">Id</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-100 uppercase">Nome do serviço</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-100 uppercase">Preço</th>
                                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-100 uppercase">Categoria</th>
                                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-100 uppercase">Ações</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-600">
                            {% for service in services %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">{{ service.id }}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">{{ service.name }}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">{{ service.price }}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 text-right">{{ service.category }}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 text-right flex gap-x-4">
                                    <a href="{{ path('service_edit', {'id': service.id}) }}" title="Editar"><i class="fa-solid fa-pen-to-square text-primary"></i></a>
                                    <a href="{{ path('service_delete', {'id': service.id}) }}" title="Deletar"><i class="fa-solid fa-trash text-primary"></i></a>
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}


